#include <stdio.h>

int main() {
    int n, i, j, temp, choice, k;

    printf("Enter number of elements: ");
    scanf("%d", &n);

    int arr[n];

    printf("Enter %d elements:\n", n);
    for (i = 0; i < n; i++) {
        scanf("%d", &arr[i]);
    }

    printf("Enter number of rotations: ");
    scanf("%d", &k);

    printf("1. Left Rotation\n2. Right Rotation\nEnter your choice: ");
    scanf("%d", &choice);
    k = k % n;
    if (choice == 1) 
        for (i = 0; i < k; i++) {
            temp = arr[0];
            for (j = 0; j < n - 1; j++) {
                arr[j] = arr[j + 1];
            }
            arr[n - 1] = temp;
        }
    } else if (choice == 2) {
          for (i = 0; i < k; i++) {
            temp = arr[n - 1];
            for (j = n - 1; j > 0; j--) {
                arr[j] = arr[j - 1];
            }
            arr[0] = temp;
        }
    } else {
        printf("Invalid choice!");
        return 0;
    }

    printf("Array after rotation:\n");
    for (i = 0; i < n; i++) {
        printf("%d ", arr[i]);
    }

    return 0;
}
